<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.budgetplaner.view.AusgabenController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Ausgaben Übersicht" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableView" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Datum" fx:id="columnDatum" prefWidth="150"/>
            <TableColumn text="Kategorie" fx:id="columnKategorie" prefWidth="200"/>
            <TableColumn text="Betrag (€)" fx:id="columnBetrag" prefWidth="150"/>
        </columns>
    </TableView>

    <Button fx:id="btnHinzufügen" text="Ausgabe hinzufügen"/>
</VBox>
