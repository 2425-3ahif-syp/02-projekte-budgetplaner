name: Generate Slides from AsciiDoc

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  generate-slides:
    runs-on: ubuntu-latest
    steps:

      - name: Checkout repository
        uses: actions/checkout@v2


      - name: Install Asciidoctor
        run: |
          sudo apt update
          sudo apt install -y asciidoctor asciidoctor-revealjs

      - name: Generate Reveal.js Slides
        run: |
          asciidoctor-revealjs index.adoc -o index.html


      - name: Upload generated slides
        uses: actions/upload-artifact@v3
        with:
          name: slides
          path: index.html

