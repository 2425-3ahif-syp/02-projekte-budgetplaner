name: Generate and Deploy Slides

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  generate-slides:
    runs-on: ubuntu-latest
    steps:
      # Checkout the repository
      - name: Checkout repository
        uses: actions/checkout@v2

      # Install Asciidoctor
      - name: Install Asciidoctor
        run: |
          sudo apt update
          sudo apt install -y asciidoctor asciidoctor-revealjs

      # Generiere die Präsentation
      - name: Generate Reveal.js Slides
        run: |
          asciidoctor-revealjs index.adoc -o ./docs/index.html

      # Push die Änderungen (falls du GitHub Pages über einen Branch wie `gh-pages` verwendest)
      - name: Push to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          personal_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./docs
